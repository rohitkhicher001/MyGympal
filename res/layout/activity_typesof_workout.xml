<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:background="#000056"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/rootview">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INTENSITY"
            android:textSize="50dp"
            android:padding="16dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#3EF0B0"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="#E4F9F1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1)BASIC"
            android:textSize="38dp"
            android:onClick="openBasic"
            android:padding="20dp"
            android:textColor="#008734"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#E4F9F1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2)INTERMEDIATE"
            android:textSize="38dp"
            android:onClick="openIntermediate"
            android:padding="20dp"
            android:textColor="#008734"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#E4F9F1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3)ADVANCED"
            android:textSize="38dp"
            android:onClick="openAdvanced"
            android:padding="20dp"
            android:textColor="#008734"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#E4F9F1"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="200dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YOU ARE JUST ONE WORKOUT AWAY FROM A GOOD MOOD!:)"
            android:textStyle="italic"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="30dp"
            android:textColor="#ffffff"/>

    </LinearLayout>
</ScrollView>